{% extends 'base.html.twig' %}
{% block title %}Category list{% endblock %}
{% block body %}
   <h1>Category list</h1>
   <ul>
      {% for category in categories %}
         <li>{{ category.name }} - color: {{ category.color}} <a href="{{path('category_edit', {'id': category.id})}}">Edit</a></li>
         {% endfor %}
   </ul>
   <a href="{{ path('category_add') }}" class="btn btn-primary btn-lg" role="button">Add new</a>
{% endblock %}
