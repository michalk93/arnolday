{% extends 'base.html.twig' %}
{% block title %}Category list{% endblock %}
{% block body %}
    <h1>Category list</h1>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Menu</th>
        </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.name }}</td>
            <td><div style="width: 20px; height: 20px; background-color: {{ category.color }}"></div></td>
            <td><a href="{{path('category_edit', {'id': category.id})}}">Edit</a></td>
        </tr>
    {% endfor %}
    </table>

   <a href="{{ path('category_add') }}" class="btn btn-primary btn-lg" role="button">Add new</a>
{% endblock %}
