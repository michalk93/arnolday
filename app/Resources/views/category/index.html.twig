{% extends 'base.html.twig' %}
{% block title %}Category list{% endblock %}
{% block body %}
    <div class="page-header">
        <h1>Category list<small> explore categories or create new one</small><a href="{{ path('category_add') }}" class="btn btn-primary pull-right" role="button">Add new category</a></h1>
    </div>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Menu</th>
        </tr>
    {% for category in categories %}
        <tr>
            <td>{{ category.name }}</td>
            <td><div style="width: 20px; height: 20px; background-color: {{ category.color }}"></div></td>
            <td><a href="{{path('category_edit', {'id': category.id})}}">Edit</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
