{% extends 'base.html.twig' %}
{% block title %}Task details{% endblock %}
{% block body %}
    <h3>Task details</h3>
    Task ID: {{ task.id }}<br />
    Name: {{ task.name }}<br />
    Details: {{ task.content }}<br />
    Due date: {{ task.dueDate|date('d-m-Y') }}<br />
    Priority: {{ task.priority }}<br /><br />
    <a href="{{ path('task_edit', {'id': task.id}) }}" class="btn btn-primary" role="button">Edit</a>
{% endblock %}