<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %} :: ARNOLDAY </title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
        <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/united/bootstrap.min.css" rel="stylesheet">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    </head>
    <body>
        {% block header %}
        <section class="section">
          <div class="container">
            <nav class="navbar navbar-default">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="{{path('index')}}">ARNOLDAY</a>
                </div>
                  <ul class="nav navbar-nav">
                    <li><a href="{{path('task_index')}}">Tasks</a></li>
                    <li><a href="{{path('categories')}}">Categories</a></li>
                  </ul>
                  <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{path('user_list')}}">Users</a></li>
                    <li><a href="#">Logout</a></li>
                  </ul>
              </div>
            </nav>
              {% block body %}{% endblock %}
          </div>
        </section>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
